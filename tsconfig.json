{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@backend/*": ["src/backend/src/*"],
      "@frontend/*": ["src/frontend/src/*"]
    }
  },
  "exclude": ["node_modules"],
  "references": [
    {
      "path": "./src/backend"
    },
    {
      "path": "./src/frontend"
    }
  ]
}
